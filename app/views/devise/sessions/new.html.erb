<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="col-md-6">
    <h2 class="text-center mb-4">Sign in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "card p-4 shadow" }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control" } %>
        <%= f.input :password,
                    required: true,
                    input_html: { autocomplete: "current-password", class: "form-control" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions text-center mt-3">
        <%= f.button :submit, "Sign in", class: "btn btn-primary px-5" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
