<div class="container my-4">
<h1>All Pets</h1>
  <div class="row g-4">
    <% @pets.each do |t| %>
      <div class="col-md-4">
        <%= link_to pet_path(t), class: "text-decoration-none" do %>
          <div
            class="card text-white h-100"
            style=" border-radius: 10px; overflow: hidden; background-image: url('<%= t.photo.attached? ? url_for(t.photo) : asset_path("placeholder.png") %>'); border-radius: 10px; background-size: cover; background-position: center; min-height: 300px ;"
          >
            <div class="card-body d-flex align-items-end bg-dark bg-opacity-50">
              <h5 class="card-title mb-0"><%= t.name %></h5>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

  </div>
  <%= link_to "Reservations", reservations_path, class: "button" %>
  <%= link_to "List your Pet", new_pet_path, class: "button" %>
</div>
