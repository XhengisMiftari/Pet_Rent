<div class="container my-4">
  <div class="row g-4">
    <% @pets.each do |t| %>
      <div class="col-md-4">
        <%= link_to pet_path(t), class: "text-decoration-none" do %>
          <div
            class="card text-white h-100"
            style="background-image: url('<%= t.photo.attached? ? url_for(t.photo) : asset_path("placeholder.png") %>'); background-size: cover; background-position: center; min-height: 300px;"
          >
            <div class="card-body d-flex align-items-end bg-dark bg-opacity-50">
              <h5 class="card-title mb-0"><%= t.name %></h5>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

  </div>
  <%= link_to "All Reservations", reservations_path, class: "btn btn-secondary mt-2" %>
  <%= link_to "List your own Pet", new_pet_path, class: "btn btn-secondary mt-2" %>
</div>
