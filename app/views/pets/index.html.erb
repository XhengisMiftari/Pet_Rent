<div class="container my-4">
  <div class="row g-4">
    <% @pets.each do |t| %>
      <div class="col-md-4">
        <%= link_to pet_path(t), class: "text-decoration-none" do %>
          <div
            class="card text-white h-100"
            style="background-image: url('<%= t.image_url %>'); background-size: cover; background-position: center; min-height: 300px;"
          >
            <div class="card-body d-flex align-items-end bg-dark bg-opacity-50">
              <h5 class="card-title mb-0"><%= t.name %></h5>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
