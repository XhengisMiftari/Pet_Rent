<div class="container">
  <h1 class="my-4">My Pet listings</h2>

  <% if @pets.any? %>
    <div class="row g-4 scroll-list__wrp">
      <% @pets.each do |pet| %>
        <div class="col-md-4 mb-4">
          <div class="card pet-card-zoom h-100" style="border-radius: 10px; overflow: hidden; background-image: url('<%= pet.photo.attached? ? url_for(pet.photo) : asset_path("placeholder.png") %>'); background-size: cover; background-position: center; min-height: 300px;">
            <div class="card-body d-flex align-items-end bg-dark bg-transparent">
              <div class="w-100">
                <h5 class="card-title mb-0" style="text-shadow: 2px 2px 6px #000;"><%= pet.name %></h5>
              </div>
            </div>
            <div class="card-footer bg-transparent border-0 mt-2">
              <%= link_to "Details", pet_path(pet), class: "button" %>
              <%= link_to "Edit", edit_pet_path(pet), class: "button" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No listings yet</p>
  <% end %>
</div>
