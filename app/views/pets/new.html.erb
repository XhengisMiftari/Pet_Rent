<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="col-md-6">
    <h2 class="text-center mb-4">Add a New Pet</h2>

    <%= simple_form_for @pet, html: { class: "card p-4 shadow" } do |f| %>
      <div class="form-inputs">
        <%= f.input :name, input_html: { class: "form-control" } %>
        <%= f.input :species, input_html: { class: "form-control" } %>
        <%= f.input :price, input_html: { class: "form-control" } %>
        <%= f.input :location, input_html: { class: "form-control" } %>
        <%= f.input :availability, input_html: { class: "form-control" } %>
      </div>
      <div class="form-actions text-center mt-3">
        <%= f.button :submit, "Birth a new Pet", class: "btn btn-primary px-5" %>
      </div>
    <% end %>
  </div>
</div>
