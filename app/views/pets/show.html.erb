<div class="container d-flex justify-content-center align-items-start gap-4" style="min-height: 100vh;">
  <div>
    <div class="card pet-card">
      <div class="card-header text-center bg-primary text-white">
        <h2><%= @pet.name %></h2>
        <small class="text-light">Rent me please â˜º</small>
      </div>
      <div class="card-body text-center">
        <ul class="list-group list-group-flush mb-3">
          <li class="list-group-item"><strong>Name: </strong><%= @pet.name %></li>
          <li class="list-group-item"><strong>Species: </strong><%= @pet.species %></li>
          <li class="list-group-item"><strong>Price: </strong>$<%= @pet.price %></li>
          <li class="list-group-item"><strong>Location: </strong><%= @pet.location %></li>
          <li class="list-group-item"><strong>Status: </strong><%= @pet.availability ? "Available" : "Not Available" %></li>
        </ul>
      </div>
    </div>
    <div class="d-flex justify-content-center mt-3" style="width: 100%;">
      <% if !@pet.reserved? %>
        <%= link_to "Reserve your buddy!", new_pet_reservation_path(@pet), class: "btn btn-primary mb-8 rounded-3 justify-content-center align-items-center" %>
      <% else %>
        <span class="text-danger fw-bold">Already reserved!</span>
      <% end %>
    </div>
    <%= link_to "Back to all pets", pets_path, class: "btn btn-secondary mt-3" %>
  </div>

  <div style="width: 600px; height: 600px;" class="rounded-4 overflow-hidden"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
