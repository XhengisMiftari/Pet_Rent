<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="col-md-6">
    <h2 class="text-center mb-4">Reserve: <%= @pet.name %></h2>

    <%= simple_form_for [@pet, @reservation], html: { class: "card p-4 shadow" } do |f| %>
      <div class="form-inputs">
        <%= f.input :start_date, as: :date, label: "Start Date", input_html: { class: "form-control" } %>
        <%= f.input :end_date, as: :date, label: "End Date", input_html: { class: "form-control" } %>
      </div>
      <div class="form-actions text-center mt-3">
        <%= f.button :submit, "Reserve", class: "btn btn-primary px-5" %>
      </div>
    <% end %>
    <%= link_to "All Reservations", reservations_path, class: "button mt-2" %>
  </div>
</div>
