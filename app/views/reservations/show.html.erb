<div class= "container d-flex justify-content-center" style="min-height: 100vh; padding-top: 100px;">
  <div class="card show-card" style="max-width: 400px; margin-left: 2rem;">
    <div class="card-header text-center bg-primary text-white animate__animated animate__pulse">
      <h2>Hi <%= @reservation.user.first_name %></h2>
      <small class="text-light">Thank you for renting me! ğŸ˜</small>
    </div>

    <div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>Pet: </strong><%= @reservation.pet.name %></li>
        <li class="list-group-item"><strong>Price: </strong>$<%= @reservation.pet.price %></li>
        <li class="list-group-item"><strong>From: </strong><%= @reservation.start_date.strftime("%-d. %B %Y") %></li>
        <li class="list-group-item"><strong>Until: </strong><%= @reservation.end_date.strftime("%-d. %B %Y") %></li>
      </ul>
    </div>
    <%= link_to "Remove Reservation", pet_reservation_path(@reservation.pet, @reservation), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "button" %>
    <%= link_to "Reservations", reservations_path, class: "button mt-2" %>
  </div>
</div>
